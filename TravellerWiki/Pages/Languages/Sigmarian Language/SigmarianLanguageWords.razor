@page "/Languages/SigmarianLanguage/Words"
@using WikiServices.DataServices
@inject SigmarianService sigmar
<head>
    <title>Sigmarian</title>
</head>
<style>
    .high {
        font-family: 'high_versianregular';
    }
</style>

<body>
<h1>Sigmarian Words</h1>
<a href="/Languages/SigmarianLangauge/">Back to language page.</a>
<p>The complete list of words in Sigmarian that are in the dictionary as common parlace beyond just being combind stuff. (IE I actually used them a bit)</p>

<ul>
    @foreach (var word in sigmar.GetAllTerms().OrderBy(x => x.Key.Letters))
    {
        <li><b class="high">@word.Key.Letters.ToLower()</b> (@word.Value): @word.Key.Meaning</li>
    }
</ul>
</body>