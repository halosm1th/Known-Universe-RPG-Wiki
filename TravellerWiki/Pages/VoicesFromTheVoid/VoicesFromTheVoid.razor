@page "/VoicesFromTheVoid/VoicesFromTheVoid"
@page "/VoicesFromTheVoid/"
@using TravellerWiki.Data.Services.DataServices
@using TravellerWiki.Data.SimpleWikiClasses
@inject TravellerVoicesFromTheVoidService voices
    <head>
        <title>Voices from the Void</title>
        <meta property="og:title" content="Known Universe Wiki - Voices from the Void" />
        <meta property="og:url" content="https://theseamnetwork.com/VoicesFromTheVoid/" />
        <meta property="og:type" content="website" />
        <meta property="og:image" content="https://thesteamnetwork.com/favicon.ico" />
        <meta content="The Wiki for the Known Universe RPG. Check out the Character Creator to jump in, or read some Voices from the Void articles to give you an idea of whats happening in the Sector. Or maybe just take a glance at the Islands Star-Charts to plot your future adventures." property="og:description" />
        <meta content="#ffe81F" data-react-helmet="true" name="theme-color" />

    </head>


<body>
    <h1>Voices from the Void.</h1>
    <p>The voices from the Void is a voidnet publication within the <a href="Islands_Sector">Western Islands Sector.</a> It covers major faction news within the Islands.</p>
    <div>
        <p>
            List of Issues
            <ul>
                @foreach (var issue in voices.VoicesFromTheVoidIssues)
                {
                    var issueText = $"/VoicesFromTheVoid/Issue/{issue.IssueNumber.ToString()}";
                    <li><a href="@issueText">Issue @issue.IssueNumber.ToString(), @issue.IssueName @issue.StartDate-@issue.EndDate</a></li>
                }

            </ul>
        </p>

        <h4><a href="/VoicesFromTheVoid/Articles/">Full List of Articles by Issue and Search Here!</a></h4>

        <div>
            <label for="writersList">Writers:</label>
            <ul id="writersList">
                <li>Kustov Kesslering - Western Islands Commune</li>
                <li>Zygmont Zylka - Western Islands Trade Consortium/Trade Federation</li>
                <li>Karl Rostova - United Baronies</li>
                <li>Orlando Kyrie - Western Islands Alliance</li>
                <li>Faleria Bellator - Rex van der Ostrovski</li>
                <li>Wyatt Larson - Dominate Supremius</li>
            </ul>
        </div>
    </div>
</body>
